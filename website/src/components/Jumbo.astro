---
import { motion } from "motion/react";

const {name, job} = Astro.props;
---
<section class="main jumbo d-flex align-items-center" id="home" data-scroll-section>
    <motion.div className="container" client:only="react" initial={{opacity: 0, translateY: 100}} whileInView={{opacity: 1, translateY: 0, transition: {duration: 0.75, ease: "easeInOut"},}}>
        <div class="row">
            <div class="col text-left">
                <h1>{name}</h1>
                <p class="job">{job}</p>
                <a class="btn-motion btn-motion-popin box-shadow shadow-lg btn btn-primary view-portfolio" href="">View Work</a>
            </div>
        </div>
    </motion.div>
</section>